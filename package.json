{
  "name": "star-wars-intro-creator",
  "version": "2.0.0",
  "description": "Star Wars Intro Creator by Kassel Labs",
  "author": "Kassel Labs <kassellabs@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "rm -rf ./dist && parcel build ./src/index.html ./src/donation_success/index.html",
    "start": "parcel ./src/index.html ./src/donation_success/index.html -p 8080 --no-hmr",
    "test": "jest",
    "test:watch": "yarn test --watchAll",
    "test:coverage": "yarn test --coverage",
    "test:coverage:results": "google-chrome coverage/lcov-report/index.html",
    "lint": "eslint .",
    "deploy": "yarn build && cp CNAME dist/ && ghpages -p dist"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.2",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-preact": "^1.1.0",
    "eslint": "^4.18.2",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-standard-preact": "^1.1.6",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.7.0",
    "ghpages": "^0.0.10",
    "jest": "^22.4.2",
    "parcel-bundler": "^1.8.1",
    "stylint": "^1.5.9",
    "stylus": "^0.54.5"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "lodash.isequal": "^4.5.0",
    "preact": "^8.2.7",
    "sweetalert2": "^7.15.1"
  }
}
