$footerCreditsColor = alpha($titlesColor, .8);

mobileFooter() {
  @media mobile {
    transform: scale(2);
    margin: 10% 25%;
    width: 50%;
  }
}

footer {
  font-family: $defaultFontFamily;

  .credits {
    position: absolute;
    top: 1em;
    width: 100%;
    color: $footerCreditsColor;
    text-align: center;
    font-size: .9em;

    a {
      text-decoration: none;
    }

    img {
      height: 20px;

      @media mobile {
        height: 40px;
      }
    }
  }

  .socialButtons {
    mobileFooter();

    position: fixed;
    bottom: 1em;
    left: 1em;
    z-index: 10;

    form {
      margin-bottom: 5px;
    }

    div {
      margin-bottom: .33em;

      &:last-of-type{
        margin-bottom: 0;
      }
    }

    #btcether {
      display: flex;
      font-weight: bold;
      line-height: 25px;

      span {
        margin-left: 5px;
      }

      &:hover {
        text-decoration: underline;
        cursor: pointer;
      }
    }
  }

  .rightFooter {
    mobileFooter();

    @media mobile {
      margin-top: 30%;
    }

    position: fixed;
    right: 1em;
    bottom: 1em;
    z-index: 10;
    text-align: center;

    a{
      display: block;
      margin-bottom: 5px;
      color: $titlesColor;
      text-decoration: none;

      &:hover{
        text-decoration: underline;
      }
    }

    #anotherServiceLink {
      margin-bottom: 20px;
    }
  }

  @media only screen and (max-device-width : 1024px)  {

    .socialButtons {
      position: initial;
      display: flex;
      flex-direction: column;
      align-items: center;
      margin-bottom: 30px;
    }

    .rightFooter {
      position: initial;
      display: flex;
      flex-direction: column;
      align-items: center;
      margin-bottom: 30px;
    }
  }
}
